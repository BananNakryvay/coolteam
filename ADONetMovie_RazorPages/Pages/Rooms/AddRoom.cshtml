@page
@model ADONetMovie_RazorPages.Pages.Rooms.AddRoomModel
@{
}
<h1>Create</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="@Model.Room.Size" class="control-label"></label>
                <select asp-for="@Model.Room.Size" class="p-2 col-md-12">
                    <option>Small</option>
                    <option>Medium</option>
                    <option>Large</option>
                </select>
                <span asp-validation-for="@Model.Room.Size" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="@Model.Room.Capacity" class="control-label"></label>
                <input asp-for="@Model.Room.Capacity" class="form-control" />
                <span asp-validation-for="@Model.Room.Capacity" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>